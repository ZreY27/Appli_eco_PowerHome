<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
                android:id="@+id/timeslot_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/green"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:clickable="true"
                android:focusable="true"
                android:animateLayoutChanges="true">

                <TextView
                    android:id="@+id/timeslot_begin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="10h00"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@id/timeslot_separator_text"/>
                <TextView
                    android:id="@+id/timeslot_separator_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_centerInParent="true"
                    android:text="-"
                    android:textSize="25sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/timeslot_end_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="11h00"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/timeslot_separator_text"/>

                <Button
                    android:id="@+id/reserver_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:text="@string/reservecreneau"
                    android:textSize="15dp"
                    android:layout_alignParentEnd="true"
                    app:cornerRadius="0dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="@color/marron_palette" />
        </RelativeLayout>
</LinearLayout>