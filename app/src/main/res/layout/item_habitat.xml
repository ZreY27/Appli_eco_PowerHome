<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp">

        <RelativeLayout
            android:id="@+id/section1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameHabitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom Habitat"
                android:fontFamily="@font/cairo_bold"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/border_grey"
                android:padding="3dp">

                <TextView
                    android:id="@+id/etage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ETAGE"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/floor"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:background="@color/marron_palette"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="N" />
             </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/section2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/section1">

            <TextView
                android:id="@+id/nbequipement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nb"
                android:layout_marginEnd="5dp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/equipements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/nbequipement"
                android:text="@string/equipement"
                android:textColor="@color/grey"
                android:textSize="14sp"

                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:orientation="horizontal"
                android:id="@+id/image"
                android:gravity="center"
                android:layout_toEndOf="@+id/equipements"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
